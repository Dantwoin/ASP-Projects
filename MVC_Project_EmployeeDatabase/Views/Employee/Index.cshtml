@model IEnumerable<MVC_Project.Models.Employee>
<!-- IEnumerable is used to make model represent a list. Otherwise, the foreach used below would not work. -->

@using MVC_Project.Models;

@{
    ViewBag.Title = "Employee List";
}
<div style="font-family:Arial ">
<h2>Employee List</h2>
    <ul>
        @foreach(Employee employee in @Model)
        {
            <li>
                @Html.ActionLink(employee.Name, "Details", new {id = employee.EmployeeID})
            </li>
        }
    </ul>
    @Html.ActionLink("Back to Department List", "Index", "Departments")
    </div>
