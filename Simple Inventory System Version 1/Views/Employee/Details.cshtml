@using Simple_Inventory_System.Models

@model Employee

@{
    ViewBag.Title = "Details";
}

<style>
    th, td {
        border: 1px solid black;
        font-family: Arial;
    }

    table {
        width: 100%;
    }

    td {
        text-align: center;
    }
    img{
        height: 125px;
        width: 125px;
            display: block;
    margin-left: auto;
    margin-right: auto;
    }

/* For browsers that understand min-width */
        .width {
            width: 75%;
            min-width:150px;
                display: block;
    margin-left: auto;
    margin-right: auto;
        }

        /* IE6 Only */
        * html .minwidth {
            border-left: 150px solid white;
            position: relative;
            float: left;
        }

        /* IE6 Only */
        * html .wrapper {
            margin-left: -250px;
            position: relative;
            float: left;
        }

        .left {
            float: left;
            width: 75%;
        }

        .right {
            float: left;
            width:25%;

        }

</style>

<div class="width">
    <h2>Employee Details</h2>
    <div class="minwidth">
        <div class="wrapper">
            <div class="left">
                <table>
                    <tr>
                        <th>Employee ID:</th>
                        <td>@Model.EmployeeID</td>
                    </tr>
                    <tr>
                        <th>Position:</th>
                        <td>@Model.Title</td>
                    </tr>
                    <tr>
                        <th>Hire Date:</th>
                        <td>@Model.HireDate</td>
                    </tr>
                </table>
                <table>
                    <tr>
                        <th>First Name:</th>
                        <td>@Model.FirstName</td>
                        <th>Last Name:</th>
                        <td>@Model.LastName</td>
                    </tr>
                    <tr>
                        <th>Home Phone:</th>
                        <td>@Model.HomePhone</td>
                        <th>Extension</th>
                        <td>@Model.Extension</td>
                    </tr>
                </table>            </div>
            <div class="right">
                <img src="https://drivenlocal.com/wp-content/themes/newdl/images/icon-user-default.png">
            </div>
        </div>
    </div>
    <table>
        <tr>

            <th>Address:</th>
            <td>@Model.Address</td>
            <th>City:</th>
            <td>@Model.City</td>
            <th>Country:</th>
            <td>@Model.Country</td>
            <th>Region:</th>
            <td>@Model.Region</td>
            <th>Postal Code:</th>
            <td>@Model.PostalCode</td>
        </tr>
    </table>

    <br />
    @Html.ActionLink("Back to Employee List", "Index", "Employee")
</div>


